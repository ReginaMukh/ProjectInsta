<%= form_with(model: comment) do |form| %>
  <div>
    <%= form.label :commenter, style: "display: block" %>
    <%= form.text_field :commenter %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit "Commit", class: "btn btn-primary"%>
  </div>
<% end %>
