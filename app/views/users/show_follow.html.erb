<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span class="profile"><%= link_to "Мой профиль", @user %></span>
      <span><b>Публикации:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
     </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="profile">
      <% @users.each do |user| %>
        <%= link_to user.name, user %> </br>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
